doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Report
    link(rel="stylesheet" href="../css/style.css")
  body
    // Nav Bar
    nav(class="flex justify-between h-20 shadow-xl")
      div(class="p-4 w-28 flex items-center")
        img(src="../images/logo.png" class="w-full h-auto cursor-pointer" alt="Logo")
      div(class="p-6")
        img(src="../images/open.svg" onclick="handleClickOpen()" id="open_icon" class="w-8 min-800:hidden cursor-pointer")
        // Big Screen
        ul(class="flex max-800:hidden")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="home.pug#home") Home
              span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
        // Small Screen
        ul(id="small" class="hidden min-800:hidden w-80 max-550:w-screen bg-gray-200 relative -right-8 -top-4 z-20 h-[94vh]")
          li(class="w-full cursor-pointer p-2" onclick="handleClickClose()")
            img(src="../images/close.svg" id="close_icon" class="w-8")
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#home" class="inline-block h-full w-full") Home
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#Services" class="inline-block h-full w-full") Services
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#models" class="inline-block h-full w-full") Models
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="Profile.pug" class="inline-block h-full w-full") Profile
    // End Nav Bar

    // Start Report Section
    h1(class="text-center font-mono text-3xl font-semibold mt-10 mb-7") Report
    section(class="w-3/4 mx-auto")
      div(id="reportContainer" class="w-full p-4 bg-white rounded-lg shadow-2xl")
        h1(class="text-2xl font-semibold text-gray-700 mb-4") Prediction Result
        div(class="flex flex-col items-center")
          img(src=`/${uploadedImagePath}` alt="Uploaded Image" class="w-96 h-auto mb-6 rounded-lg shadow-md")
          h2(class="text-2xl") Prediction: #{healthStatus}
          if advice
            p(class="text-center text-gray-700") Advice:
            blockquote(class="text-center text-gray-500") #{advice}
          button(onclick="exportStyledTableToPDF()" class="px-4 py-2 text-2xl bg-blue-500 text-white font-semibold rounded shadow hover:bg-blue-600 focus:outline-none") Export as PDF

    // Some Recommended Doctors
    section(class="bg-gray-200 p-12 mt-14")
      h1(class="text-center font-mono text-4xl font-semibold mb-8") Recommended Doctors
      section(class="grid grid-cols-4 gap-8 max-1200:grid-cols-3 max-900:grid-cols-2 max-600:grid-cols-1")
        each doctor in doctors
          .flex.flex-col.bg-white.shadow-2xl.rounded-lg
            div(class="h-56 m-2.5 overflow-hidden text-white rounded-md")
              img(src=doctor.image class="w-full h-full object-cover object-top" alt="card-image")
            div(class="p-4")
              h6(class="mb-2 text-slate-800 text-2xl font-semibold") #{doctor.name}
              p(class="text-slate-700 leading-normal text-xl font-light") #{doctor.description}
              p(class="my-1 text-slate-700 text-xl")
                span(class="text-black font-semibold") Phone: #{doctor.phone}
              p(class="my-1 text-slate-700 text-xl")
                span(class="text-black font-semibold") Email: #{doctor.email}
              span(class="mt-4 inline-block #{doctor.categoryColor} font-semibold rounded-lg py-2 px-4") #{doctor.category}

    // Scripts
    script(src="node_modules/html2pdf.js/dist/html2pdf.bundle.min.js")
    script(src="../scripts/home.js")
    script(src="../scripts/report.js")
