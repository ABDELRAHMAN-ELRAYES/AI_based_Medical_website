                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="compactness_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concavity Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concavity_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concave Points Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concave_points_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Symmetry Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="symmetry_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Fractal Dimension Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="fractal_dimension_worst" step="0.0001" required)

          //- Submit Button
          div(class="mt-6")
            button(
              class="w-[150px] h-[50px] bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
              type="submit"
            ) Get Result

          //- Result Section