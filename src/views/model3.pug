doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title AI Models | #{title}
    link(rel="icon" href="/img/images/logo.png")
    link(rel="stylesheet" href="/styles/tailwind.css")
    script(src="/js/home.js" defer)
    script(src="/js/model.js" defer)
  body
    // ========================================== Nav Bar ==========================================
    nav(class="flex justify-between h-20 shadow-xl")
      div(class="p-4 w-28 flex items-center")
        img(src="/img/images/logo.png" class="w-full h-auto cursor-pointer" alt="Logo")
      div(class="p-6")
        img(src="../images/open.svg" id="open_icon" onclick="handleClickOpen()" class="w-8 min-800:hidden cursor-pointer")
        // Big Screen
        ul(class="flex max-800:hidden")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home") Home
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home") Services
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home") Models
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/profile") Profile
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
        // Small Screen
        ul(id="small" class="hidden min-800:hidden w-80 max-550:w-screen bg-gray-200 relative -right-8 -top-4 z-20 h-[94vh]")
          li(class="w-full cursor-pointer p-2" onclick="handleClickClose()")
            img(src="../images/close.svg" id="close_icon" class="w-8")
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="/home" class="inline-block h-full w-full") Home
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="/home" class="inline-block h-full w-full") Services
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="/home" class="inline-block h-full w-full") Models
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="/profile" class="inline-block h-full w-full") Profile

    // ========================================= End Nav Bar =========================================

    h2(class="text-5xl font-semibold text-center text-blue-700 m-5") Breast Cancer Test

    div(class="container mx-auto px-4 py-8")
        form(class="p-6 flex content-between items-center" action="/predict-breast-cancer" method="POST")
          //- Mean Values Section
          div(class="mb-6 m-3")
            h2(class="text-lg font-semibold text-gray-700 mb-4 border-b pb-2") Mean Values
            div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Radius Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="radius_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Texture Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="texture_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Perimeter Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="perimeter_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Area Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="area_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Smoothness Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="smoothness_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Compactness Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="compactness_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concavity Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concavity_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concave Points Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concave_points_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Symmetry Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="symmetry_mean" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Fractal Dimension Mean
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="fractal_dimension_mean" step="0.0001" required)

          //- Standard Error (SE) Section
          div(class="mb-6 m-3")
            h2(class="text-lg font-semibold text-gray-700 mb-4 border-b pb-2") Standard Error Values
            div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Radius SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="radius_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Texture SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="texture_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Perimeter SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="perimeter_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Area SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="area_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Smoothness SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="smoothness_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Compactness SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="compactness_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concavity SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concavity_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Concave Points SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="concave_points_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Symmetry SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="symmetry_se" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Fractal Dimension SE
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="fractal_dimension_se" step="0.0001" required)

          //- Worst Values Section
          div(class="mb-6 m-3")
            h2(class="text-lg font-semibold text-gray-700 mb-4 border-b pb-2") Worst Values
            div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Radius Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="radius_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Texture Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="texture_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Perimeter Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="perimeter_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Area Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="area_worst" step="0.0001" required)

              div(class="space-y-3")
                label(class="block")
                  span(class="text-sm font-medium text-gray-700") Smoothness Worst
                  input(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" name="smoothness_worst" step="0.0001" required)

